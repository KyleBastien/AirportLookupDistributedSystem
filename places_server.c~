#endif  /* DEBUG */

  result_1 = get_airports_1(coord, clnt);
  if (result_1 == (readairports_ret *) NULL) {
	clnt_perror (clnt, "call failed");
  }
  
  list = result_1->readairports_ret_u.list;
    
